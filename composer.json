{
    "name": "letamanoir/proteus",
    "description": "Generate PHP classes from Protobuf files",
    "version": "0.0.1",
    "keywords": [
        "grpc"
    ],
    "homepage": "https://github.com/LeTamanoir/Iris",
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Saldinger",
            "email": "martin.saldinger@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "antlr/antlr4-php-runtime": "^0.9.1",
        "symfony/console": "^7.3"
    },
    "require-dev": {
        "carthage-software/mago": "1.0.0-beta.27",
        "google/protobuf": "^4.32",
        "pestphp/pest": "^4.1",
        "symfony/var-dumper": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Proteus\\": "src"
        },
        "files": [
            "./src/functions.php"
        ],
        "classmap": [

        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "bin": [
        "bin/proteus"
    ],
    "scripts": {
        "antlr-gen": [
            "if ! command -v antlr >/dev/null 2>&1; then echo 'antlr is not installed, please install it from https://www.antlr.org/download.html'; exit 1; fi",
            "antlr -Dlanguage=PHP -package 'Proteus\\Antlr4' -visitor ./src/Antlr4/Protobuf3.g4",
            "find ./src/Antlr4/ \\( -name '*.tokens' -o -name '*.interp' \\) -delete"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/mago format",
        "lint": "vendor/bin/mago analyze"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "carthage-software/mago": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
